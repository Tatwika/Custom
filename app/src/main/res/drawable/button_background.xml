<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#D32F2F"/>
            <stroke android:width="2dp" android:color="#D32F2F" />
            <corners android:radius="5dp"/>
        </shape>
    </item>
    <item  android:bottom="5dp" android:right="2dp">
        <shape>
            <corners android:radius="5dp" />
            <stroke android:color="#D32F2F"
                android:width="0dp"/>

            <gradient
                android:startColor="#F44336"
                android:centerColor="#F44336"
                android:endColor="#E53935"
                android:type="linear"
                android:centerY="100%"
                android:centerX="100%"
                android:gradientRadius="90"/>
        </shape>
    </item>

</layer-list>